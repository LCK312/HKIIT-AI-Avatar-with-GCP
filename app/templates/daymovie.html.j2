{% extends "base.html.j2" %}

{% block title %}今日電影 - 百老匯影院{% endblock %}

{% block content %}
<div class="container">
    <h1>今日上映電影</h1>
    <p>以下是今天在百老匯影院上映的電影：</p>

    <div class="movie-list">
        {% if movies %}
            {% for movie in movies %}
                <div class="movie-item">
                    <h2>{{ movie.title }}</h2>
                    <p>{{ movie.description }}</p>
                    <p>放映時間: {{ movie.showtimes }}</p>
                    <a href="{{ url_for('seatingmap', movie_id=movie.id) }}">訂票</a>
                </div>
            {% endfor %}
        {% else %}
            <p>今天沒有電影上映。</p>
        {% endif %}
    </div>
</div>
{% endblock %}