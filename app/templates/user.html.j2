<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if user %}User Profile: {{ user.username }}{% else %}User Profile{% endif %}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <!-- Add any other CSS links here -->
</head>
<body>

    <header>
        <h1>{% if user %}Welcome, {{ user.username }}!{% else %}User Profile{% endif %}</h1>
        <nav>
            <ul>
                <li><a href="{{ url_for('index') }}">Home</a></li>
                {% if user %}
                    <li><a href="{{ url_for('logout') }}">Logout</a></li>
                    <li><a href="{{ url_for('edit_profile') }}">Edit Profile</a></li>  <!-- Add edit profile link-->
                {% else %}
                    <li><a href="{{ url_for('login') }}">Login</a></li>
                    <li><a href="{{ url_for('register') }}">Register</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>

    <main>
        <section id="user-info">
            <h2>User Information</h2>

            {% if user %}
                <p><strong>Username:</strong> {{ user.username }}</p>
                <p><strong>Email:</strong> {{ user.email }}</p>
                <p><strong>Registration Date:</strong> {{ user.registration_date }}</p>  <!-- Example -->
                <!-- Add more user details as needed -->

            {% else %}
                <p>You are not logged in. Please <a href="{{ url_for('login') }}">log in</a> or <a href="{{ url_for('register') }}">register</a> to view user information.</p>
            {% endif %}
        </section>

        <section id="user-actions">
            <h2>Actions</h2>

            {% if user %}
                <p><a href="{{ url_for('view_orders') }}">View Order History</a></p>  <!-- Example action -->
                <p><a href="{{ url_for('change_password') }}">Change Password</a></p> <!-- Example action -->

            {% else %}
                <p>Login to access more features.</p>
            {% endif %}
        </section>
    </main>

    <footer>
        <p>&copy; {{ year }} My Awesome App</p>
    </footer>

</body>
</html>
